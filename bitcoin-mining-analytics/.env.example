# Bitcoin Mining Analytics - Environment Variables Template
# Copy this file to .env and fill in your actual values

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================

# PostgreSQL Configuration
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=bitcoin_mining_analytics
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your_password_here

# DuckDB Configuration
DUCKDB_PATH=data/bitcoin_analytics.duckdb

# =============================================================================
# API KEYS - Data Sources
# =============================================================================

# Blockchair API (Optional)
BLOCKCHAIR_API_KEY=your_blockchair_api_key_here

# Blockchain.com API (Optional)
BLOCKCHAIN_COM_API_KEY=your_blockchain_com_api_key_here

# CoinMetrics API
COINMETRICS_API_KEY=your_coinmetrics_api_key_here

# CryptoCompare API
CRYPTOCOMPARE_API_KEY=your_cryptocompare_api_key_here

# EIA.gov API (Energy Information Administration)
EIA_API_KEY=your_eia_api_key_here

# Electricity Maps API
ELECTRICITY_MAPS_API_KEY=your_electricity_maps_api_key_here

# =============================================================================
# APPLICATION SETTINGS
# =============================================================================

# Logging Level
LOG_LEVEL=INFO

# Update Intervals (in seconds)
UPDATE_INTERVAL_BASIC=300
UPDATE_INTERVAL_DETAILED=3600

# Data Retention
DATA_RETENTION_DAYS=365

# Default Currency
DEFAULT_CURRENCY=USD

# =============================================================================
# MINING OPERATION SETTINGS
# =============================================================================

# Default Hardware Configuration
DEFAULT_HARDWARE_MODEL=antminer_s19_xp
DEFAULT_UNITS_COUNT=10

# Energy Cost Settings (USD per kWh)
DEFAULT_ENERGY_COST=0.08
ENERGY_COST_REGION=Global

# Operational Settings
COOLING_MULTIPLIER=1.15
MAINTENANCE_COST_MONTHLY=50

# =============================================================================
# ALERTING & NOTIFICATIONS
# =============================================================================

# Profitability Alerts
PROFITABILITY_ALERT_THRESHOLD=0.1  # 10% profit margin
HASH_RATE_ALERT_THRESHOLD=0.15     # 15% change

# Notification Settings
ENABLE_EMAIL_ALERTS=false
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
EMAIL_USER=your_email@gmail.com
EMAIL_PASSWORD=your_app_password
